<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.createful.escaperoom.escaperoom.TitleScreen">

    <TextView
        android:id="@+id/LevelSelectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_a_room"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="30sp" />

    <fragment
        android:name="com.createful.escaperoom.escaperoom.RoomFragment"
        android:id="@+id/room_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>


